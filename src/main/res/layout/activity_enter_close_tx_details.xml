<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.cba.paysamplemain.EnterCloseTxActivity">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:id="@+id/edtSearch"
        android:hint="Enter Search"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:text=""
        android:imeOptions="actionDone"
        android:layout_alignParentTop="true"
        android:layout_marginTop="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Card Type"
        android:textColor="#000"
        android:layout_marginTop="20dp"
        android:id="@+id/txtSelect"
        android:layout_below="@+id/edtSearch"
        android:layout_alignLeft="@+id/edtSearch"
        android:layout_alignStart="@+id/edtSearch" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Master"
        android:layout_marginTop="10dp"
        android:textSize="12sp"
        android:id="@+id/chkMaster"
        android:layout_below="@+id/txtSelect"
        android:layout_alignLeft="@+id/txtSelect"
        android:layout_alignStart="@+id/txtSelect" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Visa"
        android:layout_marginLeft="15dp"
        android:textSize="12sp"
        android:id="@+id/chkVisa"
        android:layout_alignBaseline="@+id/chkMaster"
        android:layout_toRightOf="@+id/chkMaster"
        android:layout_toEndOf="@+id/chkMaster" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Amex"
        android:layout_marginLeft="15dp"
        android:textSize="12sp"
        android:id="@+id/chkAmex"
        android:layout_alignBaseline="@+id/chkVisa"
        android:layout_toRightOf="@+id/chkVisa"
        android:layout_toEndOf="@+id/chkVisa" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:hint="Enter Start Date : MM/dd/YYYY"
        android:gravity="center"
        android:text="02/01/2018"
        android:imeOptions="actionNext"
        android:inputType="date"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:id="@+id/edtStartDate"
        android:layout_below="@+id/chkMaster"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:hint="Enter End Date : MM/dd/YYYY"
        android:text="03/18/2018"
        android:gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:imeOptions="actionNext"
        android:inputType="date"
        android:id="@+id/edtEndDate"
        android:layout_below="@+id/edtStartDate"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:hint="Enter Page Id"
        android:text="1"
        android:gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:imeOptions="actionNext"
        android:inputType="number"
        android:id="@+id/edtPageId"
        android:layout_below="@+id/edtEndDate"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:hint="Enter Page Size"
        android:text="10"
        android:gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:id="@+id/edtPageSize"
        android:imeOptions="actionDone"
        android:inputType="number"
        android:layout_below="@+id/edtPageId"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:textSize="14sp"
        android:layout_marginTop="30dp"
        android:textAllCaps="false"
        android:id="@+id/btnSubmit"
        android:layout_below="@+id/edtPageSize"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
