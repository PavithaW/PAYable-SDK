<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@android:color/white"
    tools:context="com.cba.androidpayablesdk.SignInActivity">

    <EditText
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:inputType="text"
        android:ems="10"
        android:textSize="14sp"
        android:gravity="center"
        android:hint="Enter Username"
        android:id="@+id/edtUsername"
        android:imeOptions="actionNext"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:inputType="textPassword"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:textSize="14sp"
        android:imeOptions="actionDone"
        android:gravity="center"
        android:hint="Enter Password"
        android:id="@+id/edtPassword"
        android:layout_below="@+id/edtUsername"
        android:layout_alignLeft="@+id/edtUsername"
        android:layout_alignStart="@+id/edtUsername" />s

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign In"
        android:textSize="14sp"
        android:id="@+id/btnSignIn"
        android:layout_below="@+id/edtUsername"
        android:layout_marginTop="100dp"
        android:layout_alignRight="@+id/edtUsername"
        android:layout_alignEnd="@+id/edtUsername"
        android:layout_alignLeft="@+id/edtUsername"
        android:layout_alignStart="@+id/edtUsername" />
</RelativeLayout>
